@model IEnumerable<TTCM_Web.Models.THoaDonBan>

@{
    ViewData["Title"] = "DanhSachHoaDon";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Danh sách hóa đơn</h1>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Thêm mới</h5>
        <div class="table-responsive">
            <table id="zero_config" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>
                            Ngày
                        </th>
                        <th>
                            Tổng tiền
                        </th>
                        <th>
                            Giảm giá hóa đơn
                        </th>

                        </th>
                        <th>
                            trang thái đơn hàng
                        </th>
                        <th>
                            Mã khách hàng
                        </th>
                        <th>
                            Mã nhân viên
                        </th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.NgayHoaDon)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TongTienHd)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.GiamGiaHd)
                            </td>


                            <td>
                                @Html.DisplayFor(modelItem => item.GhiChu)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MaKhachHangNavigation.MaKhanhHang)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MaNhanVienNavigation.MaNhanVien)
                            </td>
                            <td>
                                <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.MaHoaDon">Edit</a> |
                                <a class="btn btn-success" href="@Url.Action("ChiTietHoaDon","Admin",new{mahd=@item.MaHoaDon})" asp-route-id="@item.MaHoaDon">Details</a> |
                                <a class="btn btn-success" asp-action="Delete" asp-route-id="@item.MaHoaDon">Delete</a>
                            </td>
                        </tr>
                    }

                </tbody>
                
            </table>
        </div>
    </div>
</div>

