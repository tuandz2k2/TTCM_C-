@model IEnumerable<TTCM_Web.Models.TNhaCungCap>

@{
    ViewData["Title"] = "DanhN";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Danh Sách Nhà Cung Cấp</h1>

<p>
    <a asp-action="Create">Thêm mới</a>
</p>
<div class="card">
    <div class="card-body">
        <h5 class="card-title">Thêm mới</h5>
        <div class="table-responsive">
            <table id="zero_config" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>
                           Tên nhà cung cấp
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.TenNcc)
                            </td>
                            <td>
                                <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.MaNcc">Edit</a> 
                                <a class="btn btn-success" asp-action="Details" asp-route-id="@item.MaNcc">Details</a> 
                                <a  class="btn btn-success" asp-action="Delete" asp-route-id="@item.MaNcc">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>